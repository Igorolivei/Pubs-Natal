
<!-- Main -->
<%# coding: UTF-8 %>
			<div id="main-wrapper">
				<div class="container">
					<div class="row">
						<div class="12u">
							
							<!-- Portfolio -->
								<section>
									<a href="#" class="image featured"><img src="/pic01.jpg" alt="" /></a>
									<header class="major">
										<h2>Pubs e Bares</h2>
									</header>
									
									<% i = 0 %>
										<div class="row">
										<% @bares.each do |bar| %>
											<div class="4u">
												<section class="box">
													<a href="#" class="image featured"><img src="/bares/<%=bar.IdBar%>.jpg" alt="" height="300" width="400"/></a>
													<header>
														<h3><%= bar.Nome.capitalize %></h3>
													</header>
													<p><%= bar.Descricao.capitalize %></p>
													<footer>
														<form action="/bar_visualizar" method="get">
															<input name="id_visualizar" value="<%=bar.IdBar%>" type="hidden"/>
															<input type="submit" value="Leia mais..."/><br />
														</form>
													</footer>
												</section>
											</div>
										<% i += 1 %>
										<% if i > 5 then break end %>
										<% end %>
									    </div>
								</section>

						</div>
					</div>
					<div class="row">
						<div class="12u">

							<!-- Blog -->
								<section>
									<header class="major">
										<h2>Eventos</h2>
									</header>									
						
									<% i = 0 %>
										<div class="row">
										<% @eventos.each do |evento| %>
											<div class="4u">
												<section class="box">
													<a href="#" class="image featured"><img src="/eventos/<%=evento.IdEvento%>.jpg" alt=""  height="300" width="400" /></a>
													<header>
														<h3><%= evento.Titulo.capitalize %></h3>
													</header>
													<p><%= evento.Descricao.capitalize %></p>
													<footer>
														<form action="/evento_visualizar" method="get">
															<input name="id_visualizar" value="<%=evento.IdEvento%>" type="hidden"/>
															<input type="submit" value="Leia mais..."/><br />
														</form>
													</footer>
												</section>
											</div>
										<% i += 1 %>
										<% if i > 5 then break end %>
										<% end %>
									    </div>
								</section>
							
						</div>
					</div>
				</div>
			</div>
