
		
		<!-- Main -->
			<div id="main-wrapper">
				<div class="container">
					<div class="row">
						<div class="12u skel-cell-important">
							
							<!-- Content -->
								<article class="box post">
									<% @bar.each do |bar|%>
									<a href="#" class="image featured"><img src="/<%=bar.IdBar%>.jpg" alt="" /></a>
									<header class="major">
										<h2><%=bar.Nome.capitalize%></h2>
									</header>
									<p>
										<%=bar.Descricao.capitalize%>
									</p>
									
									<section>
										<header class="major">
											<h3>Informações</h3>
										</header>
										<p><b>Endereço:</b> <%=bar.Endereco.capitalize%></p>
										<p><b>Telefone:</b> <%=bar.Telefone%></p>
										<p><b>Email:</b> <%=bar.Email%></p>
										<p><b>Funcionamento:</b> <%= bar.DiasFunc %> das <%= bar.Hinicio %> às <%= bar.Hfim %></p>											
									</section>
									<%end%>
								</article>

						</div>
					</div>
				</div>
			</div>

